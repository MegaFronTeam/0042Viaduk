mixin topLine()
	// start topLine
	+b.topLine.section#topLine&attributes(attributes)
		.container
			+e.row.row
				.col.col-lg-4
					+e.logo(href="#")
						+img('img/logo.png')
				.col.d-none.d-lg-block
					+e.contacts
						+b.contacts-item
							+e.icon
								+icon('phone')
							+e.content
								p Телефоны:
								+e.tel(href="tel:+74955450621") +7 (495) 545-06-21
								+e.tel(href="tel:+74959616127") +7 (495) 961-61-27
						+b.contacts-item
							+e.icon
								+icon('clock')
							+e.content
								p График работы:
								+e.schedule пн-пт 10:00-19:00, сб 11:00,
								+e.schedule вс - выходной
				.col-auto.col-lg-2.d-none.d-lg-block
					+e.btn.btn.btn-secondary.callback.small(href='#') Заказать звонок
				.col-auto.d-lg-none
					+menu-toggle()
	// end topLine